@model List<Trabajo.EF.MVC.Models.ProductsView>

@{ 
    ViewBag.Title = "Cargar Productos";
}

<style>
    a {
        color: #9d9d9d;
    }
    a:hover {
            color: #fff;
    }
    button {
        background-color: #3a3f41;
    }
</style>

<br />
<br />
@using (Html.BeginForm("Insert", "Products", FormMethod.Post))
{
    <div class="form-group">
        <label>Nombre del producto: </label>
        <input type="text" class="form-control" name="ProductName" id="ProductName" aria-describedby="idHelp" placeholder="Ingrese el nombre del producto">
        <small id="idHelp" class="form-text text-muted">El ID es autoincremental, no se preocupe por el.</small>
    </div>
    <div class="form-group">
        <label>Precio por unidad</label>
        <input type="text" class="form-control" name="UnitPrice" id="UnitPrice" placeholder="Ingrese el precio por unidad">
    </div>
    <div class="form-group">
        <label>Unidades en stock</label>
        <input type="text" class="form-control" name="UnitsInStock" id="UnitsInStock" placeholder="Ingrese la cantidad de producto en stock">
    </div>
    <button type="submit" class="btn btn-primary" style="background-color: #3a3f41;">Cargar</button>
}

<br />
<button type="submit" class="btn btn-group-justified">@Html.ActionLink("Volver a Productos", "Index")</button>